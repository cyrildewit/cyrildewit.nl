<header>
    <a id="logo" href="/">
        <img
            src="{{site.baseUrl}}/images/logo.png"
            alt="Logo of {{site.title}}"
            title="{{site.title}}"
        >
    </a>

    <nav>
        <div class="navigation">
            {{#site.navigation}}
            <a href="{{url}}"{{#class}} class="{{.}}"{{/class}}>{{label}}</a>
            {{/site.navigation}}
        </div>
    </nav>
</header>
